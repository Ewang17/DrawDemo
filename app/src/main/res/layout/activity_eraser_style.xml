<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/popbtn_cancel_eraser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/ic_common_close_white_bounding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画笔样式"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/popbtn_sure_eraser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/ic_common_done_white_bounding"/>

    </RelativeLayout>
    <FrameLayout
        android:background="@drawable/yulan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/colorPrimary"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relative_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/text_size_eraser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/size_seekbar_eraser"
                        android:layout_marginLeft="20dp"
                        android:text="尺寸：10"
                        android:textSize="18dp"/>

                    <SeekBar
                        android:id="@+id/size_seekbar_eraser"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:progress="10"/>

                    <ImageView
                        android:id="@+id/minus_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/plus_eraser"
                        android:layout_toStartOf="@+id/plus_eraser"
                        android:src="@drawable/ic_color_picker_minus"/>

                    <ImageView
                        android:id="@+id/plus_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_color_picker_plus"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/relative_layout1">

                    <TextView
                        android:id="@+id/text_alpha_eraser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/size_seekbar2_eraser"
                        android:layout_marginLeft="20dp"
                        android:text="透明度：100%"
                        android:textSize="18dp"/>

                    <SeekBar
                        android:id="@+id/size_seekbar2_eraser"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:progress="100"/>

                    <ImageView
                        android:id="@+id/minus2_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/plus2_eraser"
                        android:layout_toStartOf="@+id/plus2_eraser"
                        android:src="@drawable/ic_color_picker_minus"
                        android:clickable="false"/>

                    <ImageView
                        android:id="@+id/plus2_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_color_picker_plus"
                        android:layout_centerInParent="true"
                        android:clickable="false"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relative_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/relative_layout2">

                    <TextView
                        android:id="@+id/text_hardness_eraser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/size_seekbar3_eraser"
                        android:layout_marginLeft="20dp"
                        android:text="硬度：100%"
                        android:textSize="18dp"/>

                    <SeekBar
                        android:id="@+id/size_seekbar3_eraser"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:progress="100"/>

                    <ImageView
                        android:id="@+id/minus3_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/plus3_eraser"
                        android:layout_toStartOf="@+id/plus3_eraser"
                        android:src="@drawable/ic_color_picker_minus"/>

                    <ImageView
                        android:id="@+id/plus3_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_color_picker_plus"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/reset_eraser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_layout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="重置"/>



            </RelativeLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>
